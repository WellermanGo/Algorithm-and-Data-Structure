//数组快慢指针：
  移除特定元素、删除有序数组的重复项、将0移到数组最后
//数组左右指针：
  有序数组的平方、反转字符串、四（三、二）数之和、


//洛谷P1102//A-B数对
#include <iostream>
#include <algorithm>
using namespace std;
const int N = 2e5 + 5;
using ll = long long;
ll a[N];

int main()
{
    int n; ll c;
    cin >> n >> c;
    for (int i = 1; i <= n; i++)cin >> a[i];
    sort(a + 1, a + n + 1);
    ll ans = 0;                                        //ans一定要用long long;
    for (int i = 1, j = 2, k = 3; i <= n; i++)
    {
        while (j <= n && a[j] - a[i] < c)j++;
        while (k <= n && a[k] - a[i] <= c)k++;
        if (a[j] - a[i] == c && a[k - 1] - a[i] == c )ans += k - j;
    }
    cout << ans;
    return 0;
}

//洛谷P1638//逛画展
#include <iostream>
using namespace std;
const int N = 1e6+5;
using ll = long long;
int a[N];
int b[2005];
int ans[N];

int main()
{
    int n, m; cin >> n >> m;
    for (int k = 1; k <= n; k++)
    {
        ans[k] = n;
    }

    for (int i = 1; i <= n; i++)cin >> a[i];
    int i = 1, j = m;
    for (int k = 1; k <= m; k++)
    {
        b[a[k]]++;
    }
    do
    {
        for (int k = 1; k <= m; k++)
        {
            if (b[k] == 0)
            {
                do
                {
                    j++;
                    b[a[j]]++;
                } while (a[j] != k && j <= n);
            }
        }
        ans[i] = j - i + 1;
        b[a[i]]--; i++;
    } while (j <= n);
    int x = n;
    for (int k = 1; k <= n; k++)
    {
        x = min(x, ans[k]);
    }
    for (int k = 1; k <= n; k++)
    {
        if (ans[k] == x)
        {
            cout << k << " " << k + ans[k] - 1 << endl;
            break;
        }
    }
    return 0;
}
