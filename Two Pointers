//洛谷P1102//A-B数对
#include <iostream>
#include <algorithm>
using namespace std;
const int N = 2e5 + 5;
using ll = long long;
ll a[N];

int main()
{
    int n; ll c;
    cin >> n >> c;
    for (int i = 1; i <= n; i++)cin >> a[i];
    sort(a + 1, a + n + 1);
    ll ans = 0;                                        //ans一定要用long long;
    for (int i = 1, j = 2, k = 3; i <= n; i++)
    {
        while (j <= n && a[j] - a[i] < c)j++;
        while (k <= n && a[k] - a[i] <= c)k++;
        if (a[j] - a[i] == c && a[k - 1] - a[i] == c )ans += k - j;
    }
    cout << ans;
    return 0;
}
